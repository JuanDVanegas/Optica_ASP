@model IEnumerable<Optica_ASP.Models.Historial>
@{
    Layout = "../ManageAccount/_LayoutAccount.cshtml";
    ViewBag.Title = "Historial";
}
<table class="table">
    <tr class="active">
        @if (User.IsInRole("Paciente"))
        {
            <th>
                @Html.DisplayNameFor(model => model.Medico)
            </th>
        }
        else
        {
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.Medico.Entidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medico.Entidad.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @if (User.IsInRole("Paciente"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Medico.UserData.Nombre)
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Paciente.UserData.Nombre)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Medico.Entidad.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medico.Entidad.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)  
            </td>
            <td>
                @Html.ActionLink("Ver", "HistorialDetails", new { id = item.HistorialId })
            </td>
        </tr>
    }
</table>
@if (User.IsInRole("Medico"))
{
    @Html.ActionLink("Agregar nuevo Regisro", "CreateHistorial")
}