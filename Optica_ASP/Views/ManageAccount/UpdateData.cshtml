@model Optica_ASP.Models.UpdateViewModel
@{
    ViewBag.Title = "Perfil";
}
@Html.Partial("_UserPartial")
<div class="row">
    <div class="col-md-3">
        @Html.Partial("_MenuPartial")
    </div>
    <div class="col-md-9">
        @using (Html.BeginForm("UpdateData", "ManageAccount", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <p class="text-danger">@ViewBag.StatusMessage</p>
            if (!ViewBag.EmailConfirmed)
            {
                <h4 class="text-danger">Su correo electronico no ha sido verificado, debes confirmar el correo electronico para acceder a funciones como restablecer contraseña.</h4>
            }
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.RoleName, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8 max-width">
                            @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control", @readonly="readonly"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Nombre, new {@class = "col-md-4 control-label"})
                        <div class="col-md-8 max-width">
                            @Html.TextBoxFor(m => m.Nombre, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Apellido, new {@class = "col-md-4 control-label"})
                        <div class="col-md-8 max-width">
                            @Html.TextBoxFor(m => m.Apellido, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.TipoDocumento, new {@class = "col-md-4 control-label"})
                        <div class="col-md-8 max-width">
                            @Html.TextBoxFor(m => m.TipoDocumento, new {@class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Documento, new {@class = "col-md-4 control-label"})
                        <div class="col-md-8 max-width">
                            @Html.TextBoxFor(m => m.Documento, new {@class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FechaNacimiento, new {@class = "col-md-4 control-label"})
                        <div class="col-md-8 max-width">
                            @Html.EditorFor(m => m.FechaNacimiento, new {htmlAttributes = new {@class = "form-control", @readonly = "readonly" } })
                        </div>      
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new {@class = "col-md-4 control-label"})
                        <div class="col-md-8 max-width">
                            @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <a href='@Url.Action("ChangePassword", "ManageAccount")' class="col-md-offset-4 col-md-8">Cambiar la contraseña</a>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <input type="submit" value="Actualizar" class="btn btn-default"/>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

