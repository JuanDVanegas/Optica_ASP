@model Optica_ASP.Models.AdminAddUserViewModel
@{
    ViewBag.Title = "Agregar Usuario";
    Layout = "../ManageAccount/_LayoutAccount.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AdminAddUser", "ManageAccount", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Cree una cuenta nueva.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Nombre, new {@class = "col-md-4 control-label"})
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Nombre, new {@class = "form-control"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Apellido, new {@class = "col-md-4 control-label"})
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Apellido, new {@class = "form-control"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TipoDocumento, new {@class = "col-md-4 control-label"})
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.TipoDocumento, new SelectList(ViewBag.DType, "Value", "Text"), new {@class = "form-control"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Documento, new {@class = "col-md-4 control-label"})
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Documento, new {@class = "form-control"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FechaNacimiento, new {@class = "col-md-4 control-label"})
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.FechaNacimiento, new {@class = "form-control", type = "date"})
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.RoleName, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.RoleName, new SelectList(ViewBag.Roles, "Value", "Text"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NombreEntidad, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.NombreEntidad, new SelectList(ViewBag.Entitys, "Value", "Text"), new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-5 col-md-7">
            <input type="submit" class="btn btn-primary" value="Registrarse" />
        </div>
    </div>
}